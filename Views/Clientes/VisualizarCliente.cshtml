@model Cliente

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vidraçaria do Marcinho - Detalhes do Cliente</title>

    <!-- Bootstrap para estilização rápida -->

    <!-- Seus estilos -->
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="bg-light">

    <div class="borda_superior"></div>

    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header text-center bg-primary text-white rounded-top-4">
                <h2 class="m-0">Detalhes do Cliente</h2>
            </div>
            <div class="card-body p-4">
                @Html.BeginForm("CrudUsuario", "Clientes", FormMethod.Post, new {id = "form-crud-usuario"}){
                <div class="row mb-3">
                    <div class="col-md-6">
                        @* Fazer isso em todos campos *@
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "nome-usuario"})
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new {@class = "nome-usuario-input" }})
                    </div>
                    <div class="col-md-6">
                        <p><strong>CPF:</strong> @Model.CPF</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Telefone:</strong> @Model.Telefone</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>CEP:</strong> @Model.CEP</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Rua</label>
                        <input type="text" class="form-control" readonly value="@Model.Rua">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Número</label>
                        <input type="text" class="form-control" readonly value="@Model.Numero">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Bairro</label>
                        <input type="text" class="form-control" readonly value="@Model.Bairro">
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <label class="form-label">Cidade</label>
                        <input type="text" class="form-control" readonly value="@Model.Cidade">
                    </div>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("Index", "Clientes")" class="btn btn-secondary rounded-pill px-4">Voltar</a>
                    <a href="@Url.Action("EditarCliente", "Clientes", new { cpf = @Model.CPF })" class="btn btn-warning rounded-pill px-4">Editar</a>
                </div>
                }
            </div>
        </div>
    </div>

</body>
</html>
